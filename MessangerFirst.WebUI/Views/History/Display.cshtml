@using MessangerFirst.Core.Model
@model List<History>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Исторические заметки</h2>
<div class="row">
    <a href="@Url.Action("Create")" class="button">Создать</a>
</div>

@for (int i = 0; i < Model.ToList().Count; i++)
{
    <div class="row">
        <div class="large-6 columns">
            <div class="row">
                <div class="panel">
                    <p class="panel callout">
                        @Model[i].Title
                    </p>
                    <p class="panel">
                        @Model[i].Content
                    </p>
                </div>

            </div>
        </div>

    </div>
}

<div class="row">
    <a href="@Url.Action("LogOff", "Account")" class="button">Выход</a>
</div>